                name="formaListadoCiudades"
                scope="request"
                validate="false">
            <forward name="exito" path="/WEB-INF/vista/pantallas/plantilla01.jsp?c=formaListadoCiudades.jsp"/>
            <forward name="fracaso" path="/WEB-INF/vista/pantallas/pantallaInicio.jsp"/>
        </action>
        Aquí termina-->

